//---------------------Include-----------------
#include <stdint.h>
#include "timer.h"
#include "Ucglib.h"

//---------------------Define----------------
static ucg_t ucg;



int main(void)
{
    /* Loop forever */
	AppInitCommon();
	while (1){
		processTimerScheduler();
	}
}

void AppInitCommon(){
	TimerInit();
	Ucglib4WireSWSPI_begin(&ucg, UCG_FONT_MODE_SOLID);
	ucg_ClearScreen(&ucg);
	ucg_SetFont(&ucg, ucg_font_ncenR12_hr);
	ucg_SetColor(&ucg, 0, 255, 255, 255);
	ucg_SetColor(&ucg, 1, 0, 0, 0);
	ucg_SetRotate180(&ucg);
	ucg_DrawString(&ucg, 60, 24, 0, "*");
}
